---
import Layout from "../layouts/Layout.astro";
import { workExperience } from "../constants";
import BriefCase from "../components/icons/BriefCaseIcon.astro";
import Timeline from "../components/Timeline.astro";
---

<Layout title="Ale - Portfolio">
	<main>
		<section
			class="relative flex flex-col justify-center lg:flex-col min-h-screen items-center gap-8 mx-10"
		>
			<span class="flex flex-col tracking-wide">
				<span
					class="flex flex-row text-white text-4xl md:text-5xl lg:text-6xl xl:text-7xl font-extrabold"
				>
					Hi <p class="animate-wave">ğŸ‘‹ğŸ¼</p>,
				</span>
				<h1
					class="font-semibold
				bg-gradient-to-r bg-clip-text text-transparent
				from-green-400 via-green-600 to-green-700
				animate-text text-5xl md:text-6xl lg:text-7xl xl:text-8xl"
				>
					I'm Alessandro Pimentel
				</h1>
			</span>
			<a
				href="#about-me"
				class="absolute bottom-52 bg-gradient-to-b from-gray-600 to-gray-500 text-white px-4 py-2 rounded-2xl animate-bounce hover:shadow-green-400 hover:shadow-md hover:outline hover:outline-green-600"
			>
				<svg
					xmlns="http://www.w3.org/2000/svg"
					width="24"
					height="24"
					viewBox="0 0 24 24"
					fill="none"
					stroke="currentColor"
					stroke-width="2"
					stroke-linecap="round"
					stroke-linejoin="round"
					class="lucide lucide-arrow-down"
					><path d="M12 5v14"></path><path d="m19 12-7 7-7-7"
					></path></svg
				>
			</a>
		</section>
		<section
			id="about-me"
			class="flex flex-col w-full justify-center lg:flex-row items-center gap-4 py-32"
		>
			<span class="flex flex-col items-start justify-center gap-4">
				<p class="text-3xl text-green-500 text-center lg:text-left">
					About Me
				</p>
				<h2
					class="max-w-3xl text-white text-xl text-balance tracking-wide"
				>
					I'm a 22 years old Full Stack Developer, with more than 3
					years of experience. Self-taught developer who loves
					learning new technologies and tackling exciting challenges.
					I enjoy staying up-to-date with the latest tools and
					technologies to continually improve and expand my skill set.
				</h2>
			</span>
			<span
				class="relative hover:scale-110 transition-transform duration-300"
			>
				<img
					src="/profile.jpeg"
					alt="Alessandro's profile picture"
					class="w-auto h-20 lg:h-60 rounded-full outline outline-white"
				/>
				<p class="absolute text-6xl bottom-0 right-2">ğŸ‡ºğŸ‡¾</p>
			</span>
		</section>
		<section
			id="experience"
			class="flex flex-col gap-4 w-full mx-auto items-center py-44"
		>
